<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress certain checks for generated code -->
    <suppress checks="." files="[\\/]generated[\\/]"/>
    
    <!-- Suppress Javadoc checks for DTOs (they use Lombok) -->
    <suppress checks="MissingJavadocMethod" files="[\\/]dto[\\/].*\.java$"/>
    <suppress checks="MissingJavadocType" files="[\\/]dto[\\/].*\.java$"/>
    
    <!-- Suppress Javadoc checks for configuration classes -->
    <suppress checks="MissingJavadocMethod" files="[\\/]config[\\/].*\.java$"/>
    
    <!-- Suppress MethodName check for test files (allow underscores in test names) -->
    <suppress checks="MethodName" files="Test\.java$"/>
    
    <!-- Suppress AvoidStarImport for test files (static imports are acceptable) -->
    <suppress checks="AvoidStarImport" files="Test\.java$"/>
    
    <!-- Suppress ConstantName for logger fields (lowercase logger is acceptable) -->
    <suppress checks="ConstantName" files=".*" message="logger"/>
    
    <!-- Suppress MethodLength for DataInitializer.run() (data initialization method) -->
    <suppress checks="MethodLength" files="DataInitializer\.java$"/>
    
    <!-- Suppress MissingJavadocMethod for repository query methods (Spring Data JPA) -->
    <suppress checks="MissingJavadocMethod" files="[\\/]repository[\\/].*\.java$"/>
</suppressions>

